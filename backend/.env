NODE_ENV=development
PORT=5000

# Database
# Option 1: In-memory database (for development without MongoDB)
# MONGODB_URI=

# Option 2: Local MongoDB (uncomment if you have MongoDB installed locally)
# MONGODB_URI=mongodb://localhost:27017/unikalkulus

# Option 3: MongoDB Atlas (comment out for now)
# MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/unikalkulus?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=unikalkulus-super-secret-key-for-development-only
JWT_EXPIRES_IN=7d

# CORS Origins
FRONTEND_URL=http://127.0.0.1:5500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100